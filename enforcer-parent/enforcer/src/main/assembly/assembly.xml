            <source>target/grpc_health_probe-linux-arm64</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../../resources/license/LICENSE-ENFORCER.txt</source>
            <outputDirectory/>
            <destName>LICENSE.txt</destName>
        </file>
        <file>
            <source>target/org.wso2.choreo.connect.enforcer-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
